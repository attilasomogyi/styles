# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[.gitmodules]
indent_style = tab

[*.json]

[*.py]
max_line_length = 79
indent_size = 4

[*.md]
max_line_length = unset
indent_size = unset

[CHANGELOG.md]
max_line_length = unset
indent_size = unset

[*.rst]
indent_size = unset

[metadata.txt]
indent_size = unset

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab
end_of_line = crlf

[cspell-cache]
insert_final_newline = unset
